<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

        <!-- Titre -->
        <TextView
            android:id="@+id/titre_list_conversation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/title_liste_conversation"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="30sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip">

            <!-- Table Liste des Conversations -->
            <TableLayout
                android:id="@+id/table_conversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TableLayout>
        </HorizontalScrollView>

        <!-- Bouton Ajouter Conversation -->
        <Button
            android:id="@+id/btn_choix_conversation_creer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_liste_conversation_creer"/>

        <!-- Bouton Deconnecter -->
        <Button
            android:id="@+id/btn_choix_conversation_deconnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_deconnecter"/>

    </LinearLayout>
</ScrollView>
